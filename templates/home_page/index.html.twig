{% block title %}Crypto Tracker{% endblock %}

{% block body %}

{% include('home-navbar.html.twig')%}

<main class="main-wrapper">
    <div class="balance"><a href="graph">{{ balance|number_format(2, ',', ' ') }} â‚¬</a></div>
    <div class="coin-wrapper">
